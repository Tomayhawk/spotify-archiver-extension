{
  "manifest_version": 3,
  "name": "Spotify Playlist Exporter",
  "version": "1.2",
  "description": "Exports Spotify playlists to CSV with auto-scroll.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://open.spotify.com/*"]
}
